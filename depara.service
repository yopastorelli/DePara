[Unit]
Description=DePara - Gerenciador de Arquivos
Documentation=https://github.com/seu-usuario/DePara
After=network.target
Wants=network.target

[Service]
Type=simple
User=yo
Group=yo
WorkingDirectory=/home/yo/DePara
ExecStart=/usr/bin/npm start
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=depara

# Variáveis de ambiente
Environment=NODE_ENV=production
Environment=PORT=3000

# Configurações de segurança
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/home/yo/DePara

# Limites de recursos
LimitNOFILE=65536
LimitNPROC=4096

[Install]
WantedBy=multi-user.target

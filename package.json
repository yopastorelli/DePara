{
  "name": "depara",
  "version": "1.0.0",
  "description": "Aplicação DePara - Sistema de conversão e mapeamento de dados",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "start:bg": "pm2 start src/main.js --name DePara",
    "start:bg:prod": "pm2 start src/main.js --name DePara --env production",
    "stop:bg": "pm2 stop DePara",
    "restart:bg": "pm2 restart DePara",
    "status": "pm2 status",
    "logs": "pm2 logs DePara",
    "dev": "nodemon src/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "setup": "npm install",
    "setup:bg": "npm install && npm install -g pm2",
    "postinstall": "node -e \"console.log('✅ DePara instalado com sucesso! Use npm run start:bg para iniciar em segundo plano.')\""
  },
  "keywords": [
    "conversao",
    "mapeamento",
    "dados",
    "depara"
  ],
  "author": "yopastorelli",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "supertest": "^6.3.3",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
